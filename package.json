    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "ipfs": "^0.29.3",
    "ipfs-pubsub-room": "^1.2.1",
    "node-localstorage": "^1.3.1",
    "pm2": "^2.10.4",
    "request-promise-native": "^1.0.5",
    "typeforce": "^1.12.0",
    "web3": "^1.0.0-beta.34",
    "bignumber.js": "^7.2.1",
    "bitcoinjs-lib": "^3.3.2",
    "typeforce": "^1.12.0"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",

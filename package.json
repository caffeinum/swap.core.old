    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "colors": "^1.2.1",
    "copy-and-watch": "^0.1.2",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.0.3",
    "webpack-raw-bundler": "^1.3.6"
  }
